<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <ImageView
        android:id="@+id/id_dish_tag_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vegitarian"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/id_dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dish Name"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/id_dish_tag_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/id_dish_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:layout_below="@+id/id_dish_name"
        android:layout_toRightOf="@+id/id_dish_tag_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>
    <View
        android:id="@+id/viewSeparator"
        style="@style/Divider"
        android:layout_below="@+id/id_dish_price"
        android:layout_marginTop="5dp"/>


</RelativeLayout>