<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/id_profile_img"
            android:src="@drawable/user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/id_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Name"
            android:textColor="#252323"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/id_profile_img"/>
        <TextView
            android:id="@+id/id_profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="someone@example.com"
            android:textColor="#252323"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/id_profile_name"
            android:layout_toRightOf="@+id/id_profile_img"/>
        <TextView
            android:id="@+id/id_profile_mob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9874654120"
            android:textColor="#252323"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/id_profile_email"
            android:layout_toRightOf="@+id/id_profile_img"/>
        <View
            android:id="@+id/id_viewSeparator"
            style="@style/Divider"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/id_profile_img"/>
        <LinearLayout
            android:id="@+id/fav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/id_viewSeparator"
            android:layout_marginTop="10dp">
            <ImageView
                app:srcCompat="@drawable/ic_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAVORITES"
                android:textColor="#8F8989"
                android:paddingLeft="15dp"
                android:textSize="15dp"/>
        </LinearLayout>
        <View
            android:id="@+id/id_viewSeparator2"
            style="@style/Divider"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/fav"/>
        <LinearLayout
            android:id="@+id/offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/id_viewSeparator2"
            android:layout_marginTop="10dp">
            <ImageView
                app:srcCompat="@drawable/ic_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFFERS"
                android:textColor="#8F8989"
                android:paddingLeft="15dp"
                android:textSize="15dp"/>
        </LinearLayout>
        <View
            android:id="@+id/id_viewSeparator3"
            style="@style/Divider"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/offer"/>
        <LinearLayout
            android:id="@+id/pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/id_viewSeparator3"
            android:layout_marginTop="10dp">
            <ImageView
                app:srcCompat="@drawable/ic_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAYMENT"
                android:textColor="#8F8989"
                android:paddingLeft="15dp"
                android:textSize="15dp"/>
        </LinearLayout>
        <View
            android:id="@+id/id_viewSeparator4"
            style="@style/Divider"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/pay"/>
        <LinearLayout
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/id_viewSeparator4"
            android:layout_marginTop="10dp">
            <ImageView
                app:srcCompat="@drawable/ic_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SETTINGS"
                android:textColor="#8F8989"
                android:paddingLeft="15dp"
                android:textSize="15dp"/>
        </LinearLayout>
        <View
            android:id="@+id/id_viewSeparator5"
            style="@style/Divider"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/settings"/>
        <LinearLayout
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/id_viewSeparator5"
            android:layout_marginTop="10dp">
            <ImageView
                app:srcCompat="@drawable/ic_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HELP"
                android:textColor="#8F8989"
                android:paddingLeft="15dp"
                android:textSize="15dp"/>
        </LinearLayout>
        <View
            android:id="@+id/id_viewSeparator6"
            style="@style/Divider"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/help"/>
        <LinearLayout
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/id_viewSeparator6"
            android:layout_marginTop="10dp">
            <!--<ImageView
                app:srcCompat="@drawable/ic_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABOUT"
                android:textColor="#8F8989"
                android:paddingLeft="15dp"
                android:textSize="15dp"/>
        </LinearLayout>
        <View
            android:id="@+id/id_viewSeparator7"
            style="@style/Divider"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/about"/>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>